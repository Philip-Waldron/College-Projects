<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsa.lol.summonerapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lsalogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lsa.lol.summonerapp.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lsa.lol.summonerapp.Main2Activity" />

        <receiver
            android:name="com.lsa.lol.summonerapp.InternetConnectionChecker"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="com.lsa.lol.summonerapp.CheckForNewGames"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.lsa.lol.summonerapp.UserAddActivity" />
        <activity android:name="com.lsa.lol.summonerapp.InGameActivity"
            android:theme="@style/AppTheme.PopupTheme" />
    </application>

</manifest>
